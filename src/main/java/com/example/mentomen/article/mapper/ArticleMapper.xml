<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mentomen.article.mapper.articleMapper">
  <resultMap id="article" type="com.example.mentomen.article.dao.ArticleDAO">
    <id property="articleId" column="article_id" />
    <result property="creatorId" column="creator_id" />
    <result property="createdAt" column="created_at" />
    <result property="modifiedAt" column="modified_at" />
    <result property="title" column="title" />
    <result property="place" column="place" />
    <result property="contents" column="contents" />
    <result property="status" column="status" />
    <result property="totalRecruit" column="total_recruit" />
  </resultMap>
  <select id="getArticleList" resultType="com.example.mentomen.article.dao.ArticleDAO" resultMap="article">
    SELECT 
      article_id,
      title,
      place,
      contents,
      created_at,
      creater_id,
      modified_at,
      status,
      total_recruit
    FROM
      article
    ORDER BY
      #{orderObj}
    OFFSET (#{offset}-1)*#{limit} ROW
    FETCH NEXT #{limit} ROW ONLY
  </select>
  <select id="getArticle" resultType="com.example.mentomen.article.dao.ArticleDAO" resultMap="article">
    SELECT 
      article_id,
      title,
      place,
      contents,
      created_at,
      creater_id,
      modified_at,
      status,
      total_recruit
    FROM
      article
    WHERE
      article_id = #{id}
  </select>
  <insert id="saveArticle" parameterType="String">
    INSERT INTO 
      article
      (
        title,
        place,
        contents,
        created_at,
        creator_id,
        modified_at, 
        modifier_id, 
        modified_at,
        member_id,
        scrap_id
        )
      VALUES 
      (
        #{name}, 
        #{creator}, 
        #{detail}, 
        now(),
        now()
        )
    </insert>
  <update id="updateArticle"></update>
  <delete id="deleteArticle" parameterType="Integer">
    DELETE FROM article
    WHERE id = #{articleId}
  </delete>
</mapper>